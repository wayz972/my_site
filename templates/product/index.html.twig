{% extends 'base.html.twig' %}

{% block title %}Nos Produits
{% endblock %}
{% block content %}
	<style>
		.product-item h5 {
			text-transform: uppercase;
			font-size: 14px;
			margin-bottom: 5px;
		}

		.product-item {
			margin-top: 15px;
		}
		.product-item span {
			font-size: 14px;
			display: block;
			margin-bottom: 10px;
		}
		.product-item .product-subtitle {
			font-size: 14px;
			display: block;
			margin-bottom: 10px;
		}
		.product-item .product-price {
			font-size: 14px;
			font-weight: bold;
		}
      .product-container{
         margin-bottom: 100px;

      }
	</style>

	<div class="row">
	<div class="col-md-3">
	<h1>filtrer</h1>

{{form(form)}}

	</div>
	<div class="col-md-9">
	<div class="row product-container">
			{% for items in products %}
				<div class="col-md-4">
					<div class="product-item text-center">
						<a href="{{path('app_product',{'slug' :items.slug})}}"><img src="/uploads/{{items.Illustration}}" alt="{{items.name}}" class="img-fluid"></a>
						<h5>{{items.name}}</h5>
						<span class="product-subtitle">{{items.subtitle}}</span>
